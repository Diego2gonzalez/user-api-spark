<script>
  // üß† Abre la conexi√≥n con tu servidor Spark (WebSocket)
  // Usa 'ws://' para desarrollo local o 'wss://' si usas HTTPS en producci√≥n.
  const socket = new WebSocket("ws://localhost:4567/prices");

  // Cuando la conexi√≥n se abre
  socket.onopen = () => {
    console.log("üü¢ WebSocket connected to /prices");
  };

  // Cuando llega un mensaje desde el servidor
  socket.onmessage = (event) => {
    const data = JSON.parse(event.data);
    console.log(`üì° Price update for Product #${data.productId}: $${data.newPrice}`);

    // üí° Actualizaci√≥n visual opcional: buscar celda en tabla y cambiar valor
    const cell = document.querySelector(`#price-${data.productId}`);
    if (cell) {
      cell.textContent = `$${data.newPrice.toFixed(2)}`;
      cell.style.color = "green";
      setTimeout(() => (cell.style.color = ""), 1500);
    }
  };

  // Cuando el socket se cierra
  socket.onclose = () => {
    console.warn("üî¥ WebSocket disconnected");
  };

  // Si ocurre alg√∫n error
  socket.onerror = (error) => {
    console.error("‚ö†Ô∏è WebSocket error:", error);
  };
</script>

<script>
  // üß†‚ÄØConstruye la URL con los par√°metros y llama al endpoint /productos/filter
  async function applyFilters() {
    const nombre = document.getElementById("filterNombre").value.trim();
    const minCosto = document.getElementById("filterMinCosto").value.trim();
    const maxCosto = document.getElementById("filterMaxCosto").value.trim();
    const minCantidad = document.getElementById("filterMinCantidad").value.trim();
    const maxCantidad = document.getElementById("filterMaxCantidad").value.trim();

    let url = "/productos/filter?";
    const params = [];
    if (nombre) params.push(`nombre=${encodeURIComponent(nombre)}`);
    if (minCosto) params.push(`minCosto=${minCosto}`);
    if (maxCosto) params.push(`maxCosto=${maxCosto}`);
    if (minCantidad) params.push(`minCantidad=${minCantidad}`);
    if (maxCantidad) params.push(`maxCantidad=${maxCantidad}`);
    url += params.join("&");

    try {
      const res = await fetch(url);
      if (!res.ok) throw new Error("Server error");
      const products = await res.json();
      renderFilteredProducts(products);

    } catch (err) {
      console.error(err);
      alert("Error applying filters");
    }
  }

  // üß©‚ÄØActualiza la tabla con los resultados filtrados
  function renderFilteredProducts(products) {
  const tbody = document.getElementById("productTableBody");
  tbody.innerHTML = ""; // limpia la tabla

  if (!products || products.length === 0) {
    tbody.innerHTML =
      `<tr><td colspan="7" class="text-center text-muted">No products found.</td></tr>`;
    return;
  }

  products.forEach(p => {
    const row = `
      <tr>
        <td>${p.id}</td>
        <td>${p.nombre}</td>
        <td id="price-${p.id}">$ ${p.costo}</td>
        <td>${p.descripcion || ""}</td>
        <td>${p.cantidad}</td>   <!-- ‚úÖ Nueva columna -->
        <td>
          <button class="btn btn-outline-primary btn-sm"
                  onclick="openEditModal(${p.id}, '${p.nombre}', ${p.costo}, '${p.descripcion || ""}')">
            Edit
          </button>
          <button class="btn btn-outline-danger btn-sm"
                  onclick="openDeleteModal(${p.id})">Delete</button>
        </td>
      </tr>`;
    tbody.insertAdjacentHTML("beforeend", row);
  });
}
</script>

