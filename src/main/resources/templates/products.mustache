<!-- ✅ Products table -->
<section class="container py-5">
  <div class="row text-center pt-3">
      <div class="col-lg-6 m-auto">
          <h1 class="h1">My Products</h1>
          <p>You can view and manage all your registered products here.</p>
      </div>
  </div>

  <div class="row justify-content-center mt-4">
      <div class="col-12">
          <table class="table table-striped table-bordered">
              <thead class="table-dark">
                  <tr>
                      <th>ID</th>
                      <th>Name</th>
                      <th>Price</th>
                      <th>Description</th>
                      <th>Actions</th>
                  </tr>
              </thead>
              <tbody>
                {{#products}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{nombre}}</td>
                    <td>$ {{costo}}</td>
                    <td>{{descripcion}}</td>
                    <td>
                        <button class="btn btn-outline-primary btn-sm"
                                onclick="openEditModal({{id}}, '{{nombre}}', {{costo}}, '{{descripcion}}')">
                            Edit
                        </button>
                        <button class="btn btn-outline-danger btn-sm"
                                onclick="openDeleteModal({{id}})">
                            Delete
                        </button>
                    </td>
                </tr>
                {{/products}}

                {{^products}}
                <tr>
                    <td colspan="5" class="text-center text-muted">No products found.</td>
                </tr>
                {{/products}}
            </tbody>
          </table>
      </div>
  </div>
</section>

{{> modals.mustache}}

<!-- Scripts -->
<script src="/assets/js/bootstrap.bundle.min.js"></script>
<script src="/assets/js/addProduct.js"></script>
<script src="/assets/js/editProduct.js"></script>
<script src="/assets/js/deleteProduct.js"></script>

<script>
  function openEditModal(id, nombre, costo, descripcion) {
    document.getElementById('editId').value = id;
    document.getElementById('editNombre').value = nombre;
    document.getElementById('editDescripcion').value = descripcion;
    document.getElementById('editCosto').value = costo;
    const modal = new bootstrap.Modal(document.getElementById('editProductModal'));
    modal.show();
  }

  function openDeleteModal(id) {
    document.getElementById('deleteProductId').value = id;
    const modal = new bootstrap.Modal(document.getElementById('deleteProductModal'));
    modal.show();
  }
</script>
</body>
